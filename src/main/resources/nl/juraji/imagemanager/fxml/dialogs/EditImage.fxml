<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import nl.juraji.imagemanager.components.ImageViewer?>

<AnchorPane prefHeight="768.0" prefWidth="1030.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.juraji.imagemanager.fxml.dialogs.EditImageController">
    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Button mnemonicParsing="false" onAction="#toolbarSaveAction" text="%editImageController.toolbarSaveAction.label" />
                <Button mnemonicParsing="false" onAction="#toolbarCloseAction" text="%editImageController.toolbarCloseAction.label" />
            </ToolBar>
        </top>
        <center>
            <SplitPane dividerPositions="0.3" BorderPane.alignment="CENTER">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <VBox fx:id="informationPaneVBox" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <Label text="%editImageController.informationPane.filePath.label" />
                        <Label fx:id="filePathTextField" onMouseClicked="#informationPaneFilePathLabelClicked" text="filePath" wrapText="true">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Label>
                        <Label text="%editImageController.informationPane.directoryName.label" />
                        <Label fx:id="directoryNameTextField" text="directoryName" wrapText="true" />
                        <Label text="%editImageController.informationPane.imageDimensions.label" />
                        <Label fx:id="imageDimensionsTextField" text="imageDimensions" wrapText="true" />
                        <Label text="%editImageController.informationPane.fileSize.label" />
                        <Label fx:id="fileSizeTextField" text="fileSize" wrapText="true" />
                        <Label text="%editImageController.informationPane.dateAdded.label" />
                        <Label fx:id="dateAddedTextField" text="dateAdded" wrapText="true" />
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
                    </VBox>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </AnchorPane>
                <AnchorPane fx:id="imageViewerContainer" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #333333;">
                    <ProgressIndicator />
                    <ImageViewer fx:id="imageViewer" />
                </AnchorPane>
            </SplitPane>
        </center>
      <bottom>
          <VBox prefHeight="20.0" BorderPane.alignment="CENTER">
              <Label fx:id="statusBarZoomLevelLabel" text="zoom level"/>
              <padding>
                  <Insets left="10.0" right="10.0"/>
              </padding>
          </VBox>
      </bottom>
    </BorderPane>
</AnchorPane>
