<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<fx:root minHeight="1" minWidth="1" onScroll="#onScrollEvent" onZoom="#onZoomEvent" prefHeight="500.0" prefWidth="500.0"
         style="-fx-background-color: #333333;" type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="nl.juraji.imagemanager.ui.components.ImageViewer">
    <ImageView fx:id="imageView" layoutX="6.0" layoutY="2.0" preserveRatio="true"/>
    <Label fx:id="zoomLabel" onMouseClicked="#resetZoomAndPosition"
           style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 5;" text="Zoom value" textFill="WHITE"
           AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" StackPane.alignment="TOP_RIGHT">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <padding>
            <Insets bottom="3.0" left="5.0" right="5.0" top="3.0"/>
        </padding>
        <tooltip>
            <Tooltip text="%ImageViewer.zoomLabel.tooltip">
                <font>
                    <Font size="12.0"/>
                </font>
            </Tooltip>
        </tooltip>
    </Label>
    <Label onMouseClicked="#zoomToOriginalSize"
           style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 20;" text="⅟₁" textFill="WHITE"
           AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="31.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <padding>
            <Insets left="7.0" right="7.0"/>
        </padding>
        <font>
            <Font size="23.0"/>
        </font>
        <tooltip>
            <Tooltip text="%ImageViewer.zoom100Percent.tooltip">
                <font>
                    <Font size="12.0"/>
                </font>
            </Tooltip>
        </tooltip>
    </Label>
    <Label onMouseClicked="#zoomToFit" style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 20;"
           text="⤧" textFill="WHITE" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="69.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <padding>
            <Insets left="8.0" right="8.0" top="-2.0"/>
        </padding>
        <font>
            <Font size="25.0"/>
        </font>
        <tooltip>
            <Tooltip text="%ImageViewer.zoomToFit.tooltip">
                <font>
                    <Font size="12.0"/>
                </font>
            </Tooltip>
        </tooltip>
    </Label>
    <Label onMouseClicked="#rotateClockwise90" style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 20;"
           text="⤸" textFill="WHITE" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="107.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <padding>
            <Insets left="11.0" right="11.0" top="-5.0"/>
        </padding>
        <font>
            <Font size="27.0"/>
        </font>
        <tooltip>
            <Tooltip text="%ImageViewer.rotateCWLabel.tooltip">
                <font>
                    <Font size="12.0"/>
                </font>
            </Tooltip>
        </tooltip>
    </Label>
    <Label onMouseClicked="#rotateCounterclockwise90"
           style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 20;" text="⤹" textFill="WHITE"
           AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="145.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <padding>
            <Insets left="11.0" right="11.0" top="-5.0"/>
        </padding>
        <font>
            <Font size="27.0"/>
        </font>
        <tooltip>
            <Tooltip text="%ImageViewer.rotateCCWLabel.tooltip">
                <font>
                    <Font size="12.0"/>
                </font>
            </Tooltip>
        </tooltip>
    </Label>
</fx:root>
