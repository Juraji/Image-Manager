<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root onContextMenuRequested="#onContextMenuRequested" prefHeight="200.0" prefWidth="190"
         type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="nl.juraji.imagemanager.ui.components.ImageTile">
    <StackPane fx:id="imageViewStackPane" prefHeight="190.0" prefWidth="190.0" BorderPane.alignment="CENTER">
        <ProgressIndicator maxHeight="50.0" maxWidth="50.0"/>
        <ImageView fx:id="imageContainer" fitHeight="190.0" fitWidth="190.0" preserveRatio="true"
                   style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 3, 7);">
            <StackPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </StackPane.margin>
        </ImageView>
    </StackPane>
    <FlowPane hgap="5.0" prefWrapLength="190.0" BorderPane.alignment="CENTER">
        <Label fx:id="directoryLabel" prefWidth="190.0" text="directory"/>
        <Label fx:id="fileNameLabel" prefWidth="190.0" text="file name"/>
        <Label fx:id="dateAddedLabel" text="date added"/>
        <Label fx:id="imageDimensionsLabel" text="image dimensions"/>
        <Label fx:id="fileSizeLabel" text="file size" textAlignment="RIGHT"/>
    </FlowPane>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</fx:root>
